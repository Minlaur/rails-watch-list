<h2><%= @list.name %></h2>
<ul><% @list.bookmarks.each do |bookmark| %>
  <li>
    <%= bookmark.comment %> - <%= bookmark.movie.title %>
    <%= link_to "X", list_bookmark_path(bookmark), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
  </li>
  <% end %>
</ul>

<p> <%= link_to "Add new bookmark!", new_list_bookmark_path(list_id: @list.id) %> </p>
<p> <%= link_to "See my watch lists", lists_path %> </p>
